var Config={
  WIDTH:800,
  HEIGHT:600,
  
  TARGET_FPS:30,
  TARGET_MS:null,
  DEBUG_INFO:<%= !Rails.env.production? ? 'true': 'false' %>,
  AJAX_WAIT_TIME:<%= !Rails.env.production? ? 300: 2000 %>, //time to wait "past" the deadline for new turn.

  /*
   * Doesn't factor Zoom etc. Remember that in order to avoid gaps and render
   * without odd gaps you
   * are gonna need sqrt(SCREENWIDTH^2 + SCREENHEIGHT^2) / size tiles
   * Since the tiles can be rotated.
   */
  TILE_SIZE:50,//
  GRID_RADIUS:5, //-n => n, leaving (2n+1)(2n+1) squares

  UIGRID_NUMBER_H_OFFSET_X:13,
  UIGRID_NUMBER_H_OFFSET_Y:-4,
  UIGRID_NUMBER_V_OFFSET_X:0,
  UIGRID_NUMBER_V_OFFSET_Y:3,
  UIPANEL_X_OFFSET:600,
  UIPANEL_Y_OFFSET:25,
  UIPANEL_WIDTH:175,
  UIPANEL_HEIGHT:550,
  UIQUEUE_LABEL_Y_OFFSET:18,

  WORLDBOUNDARY_X:30, // Mirrored: ie -x -> 0 -> x
  WORLDBOUNDARY_Y:30, // Mirrored: ie -y -> 0 -> y

  COORDS_UI:1,
  COORDS_WORLD:2,

  INIT_WAIT_TICKMS:1000,
  INIT_WAIT_TIMEOUT:10000,
  BLINK_RATE:2000,
  UIPANELCONTROL_LABEL_Y_OFFSET:5,
  UIBUTTON_OFFSET_Y:6,

  UIWORLD_WIDTH:null,
  UIWORLD_HEIGHT:null,    
  COORDINATE_DIGITS:null,
  UIPANELCONTROL_X_OFFSET:null,
  UIPANELCONTROL_Y_OFFSET:null,
  UIPANELCONTROL_WIDTH:null,
  UIPANELCONTROL_HEIGHT:null,
  UIQUEUE_X_OFFSET:null,
  UIQUEUE_Y_OFFSET:null,
  UIQUEUE_WIDTH:null,
  UIQUEUE_HEIGHT:null,
  UIQUEUE_SPACER:null,
  UICLOCK_MIDPOINT_X:null,
  UICLOCK_MIDPOINT_Y:null,
  UICLOCK_RADIUS:null,
  UISTATS_X_OFFSET:null,
  UISTATS_Y_OFFSET:null,
  UISTATS_WIDTH:null,
  UISTATS_HEIGHT:null,
  UIINSPECT_OFFSET_Y:null
}

//Later evals
Config.TARGET_MS = 1000/Config.TARGET_FPS;
Config.UIWORLD_WIDTH = Config.HEIGHT; //deliberate to make a square!
Config.UIWORLD_HEIGHT = Config.HEIGHT;
Config.COORDINATE_DIGITS = Config.WORLDBOUNDARY_X.toString().length;

Config.UIPANELCONTROL_X_OFFSET = Config.UIPANEL_X_OFFSET+(((Config.UIPANEL_WIDTH)-(Config.TILE_SIZE*3))*0.5);
Config.UIPANELCONTROL_Y_OFFSET = Config.UIPANEL_Y_OFFSET+Config.UIPANEL_HEIGHT-(3.25*Config.TILE_SIZE);
Config.UIPANELCONTROL_WIDTH    = Config.TILE_SIZE*3
Config.UIPANELCONTROL_HEIGHT   = Config.TILE_SIZE*3

Config.UIQUEUE_X_OFFSET   = Config.UIPANELCONTROL_X_OFFSET+(2*Config.TILE_SIZE);
Config.UIQUEUE_Y_OFFSET   = Config.UIPANELCONTROL_Y_OFFSET-Config.TILE_SIZE;
Config.UIQUEUE_WIDTH      = Config.TILE_SIZE;
Config.UIQUEUE_HEIGHT     = Config.TILE_SIZE/2;
Config.UIQUEUE_SPACER     = Config.UIQUEUE_HEIGHT + 5 

Config.UICLOCK_MIDPOINT_X = Config.UIPANELCONTROL_X_OFFSET+(2.5*Config.TILE_SIZE);
Config.UICLOCK_MIDPOINT_Y = Config.UIPANELCONTROL_Y_OFFSET-Config.TILE_SIZE - (Config.UIQUEUE_SPACER * 10);
Config.UICLOCK_RADIUS     = 20;
Config.UICLOCK_RADIUS_BIG = 25;

Config.UISTATS_X_OFFSET   = Config.UIPANEL_X_OFFSET + 5;
Config.UISTATS_Y_OFFSET   = Config.UICLOCK_MIDPOINT_Y - 20;
Config.UISTATS_WIDTH      = Config.TILE_SIZE * 2;
Config.UISTATS_HEIGHT     = 15;

Config.UIINSPECT_HEIGHT     = (Config.UISTATS_HEIGHT*2.5)
Config.UIINSPECT_PAD        = (Config.UISTATS_HEIGHT*2.5) + 5;
Config.UIINSPECT_INTERNAL_Y = (Config.UISTATS_HEIGHT/2)

Config.UIINSPECT_OFFSET_Y = Config.UISTATS_Y_OFFSET+(Config.UISTATS_HEIGHT*7.5); 